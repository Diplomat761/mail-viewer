<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Просмотр почты</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Входящие сообщения</h1>
      <a href="/" class="btn btn-outline-secondary">Назад</a>
    </div>

    <% if (emails.length === 0) { %>
      <div class="alert alert-info">
        Писем не найдено.
      </div>
    <% } else { %>
      <div class="row">
        <div class="col-md-4">
          <div class="list-group mb-4">
            <% emails.forEach((email, index) => { %>
              <a href="#email-<%= email.id %>" class="list-group-item list-group-item-action"
                 onclick="showEmail(<%= index %>)">
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1"><%= email.subject || 'Без темы' %></h5>
                  <small><%= new Date(email.date).toLocaleString('ru-RU') %></small>
                </div>
                <p class="mb-1"><%= email.from %></p>
              </a>
            <% }); %>
          </div>
        </div>
        
        <div class="col-md-8">
          <% emails.forEach((email, index) => { %>
            <div id="email-content-<%= index %>" class="email-content card mb-4" style="<%= index === 0 ? '' : 'display: none;' %>">
              <div class="card-header d-flex justify-content-between">
                <h5><%= email.subject || 'Без темы' %></h5>
                <small><%= new Date(email.date).toLocaleString('ru-RU') %></small>
              </div>
              <div class="card-body">
                <div class="email-headers mb-3">
                  <p><strong>От:</strong> <%= email.from %></p>
                  <p><strong>Кому:</strong> <%= email.to %></p>
                </div>
                
                <hr>
                
                <div class="email-body mb-3">
                  <% if (email.text.includes('<html') || email.text.includes('<body')) { %>
                    <div class="html-content"><%- email.text %></div>
                  <% } else { %>
                    <div class="text-content"><%= email.text %></div>
                  <% } %>
                </div>
                
                <% if (email.attachments && email.attachments.length > 0) { %>
                  <hr>
                  <div class="email-attachments">
                    <h6>Вложения:</h6>
                    <div class="list-group">
                      <% email.attachments.forEach(attachment => { %>
                        <a href="<%= attachment.path %>" class="list-group-item list-group-item-action" target="_blank">
                          <i class="bi bi-paperclip"></i> <%= attachment.filename %>
                        </a>
                      <% }); %>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>
  </div>

  <script>
    function showEmail(index) {
      document.querySelectorAll('.email-content').forEach(content => {
        content.style.display = 'none';
      });
      document.getElementById(`email-content-${index}`).style.display = 'block';
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 